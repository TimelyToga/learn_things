<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.timothyblumberg.autodidacticism.learnthings" >

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MCActivity"
            android:label="@string/question_activity_title" >
        </activity>
        <activity
            android:name=".FRActivity"
            android:label="@string/question_activity_title" >
        </activity>
        <receiver android:name=".common.AlarmReceiver" >
            <intent-filter>
                <action android:name="com.example.android.receivers.NOTIFICATION_ALARM" />
            </intent-filter>
        </receiver>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BaseActivity"
            android:label="@string/question_activity_title" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>
